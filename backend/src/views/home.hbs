<style>
    #container {
        width: 1000px;
        margin: 20px auto;
    }
    #container textarea {
        width: 1000px;
        height: 200px;
    }
</style>
<div id="container">
    <form action="?_method={{method}}" method="post">
        <label for="name">Name</label>
        <input type="text" name="name" style="width: 900px" value="{{name}}"/>
        <br />
        <label for="state">State</label>
        <input type="text" name="state" style="width: 900px" value="{{state}}" readonly/>
        <br />
        <label for="name">Quote</label>
        <input type="text" name="quote" style="width: 900px" value="{{quote}}"/>
        <br />
        <label for="img">Image</label>
        <input type="text" name="img" style="width: 900px" value="{{img}}"/>
        <br />
        <label for="content">Content</label>
        <textarea name="content" >{{{content}}}</textarea>
        <p><input type="submit" value="Submit"></p>
    </form>
</div>
